<div class="container">
  <div class="profile-container">
    <div class="media">
      <%= image_tag avatar_url(current_user), class: "pull-left" %>
      <div class="media-body">
        <div class="media">
          <h5><%= current_user.email %></h5>
          <%= link_to "logout", logout_path %>
        </div>
      </div>
    </div>
  </div>

  <h3>Próximas Cobranças</h3>
  
  <table class="table table-hover">
    <th>Email</th>
    <th>Description</th>
    <th>Deadline</th>
    <th></th>

    <%= render partial: "collection", collection: current_user.collections %>
  </table>

  <div class="btn-group">
    <button class="btn">New</button>
  </div>
</div>
