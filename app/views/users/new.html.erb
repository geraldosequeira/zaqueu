<div class="container">
  <%= form_for @user, html: {class: "form-signin"} do |f| %>
    <fieldset>
      <legend>Sign Up</legend>
      <div class="form-group">
        <%= f.text_field :email, class: "input-block-level", placeholder: "Enter Email" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, class: "input-block-level", placeholder: "Enter Password" %>
      </div>
      <div class="form-group">
        <%= f.text_field :username, class: "input-block-level", placeholder: "Enter Username" %>
      </div>
      <button type="submit" class="btn btn-default btn-block">Save</button>
      <br/>
      <%= link_to "Log in", new_session_path %> to your account
    </fieldset>
  <% end %>
</div>