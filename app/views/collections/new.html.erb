<div class="container">
  <h3>Nova Cobran√ßa</h3>
  <br/>
  <%= form_for @collection, url: user_collections_path, :html => { :class => 'form-horizontal' } do |f| %>
    <div class="control-group">
      <%= f.label :email, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :email, :class => 'text_field' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :description, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :description, :rows => 5, :class => 'text_area' %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :deadline, :class => 'control-label' %>
      <div class="controls">
        <%= f.date_field :deadline, :class => 'datafield' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit "Salvar", :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  root_path, :class => 'btn' %>
    </div>
  <% end %>
</div>
